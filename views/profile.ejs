<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgriConnect Profile</title>
    <link rel="icon" type="image/png" href="/images/agriconnect_logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        ::-webkit-scrollbar { width: 8px; height: 8px; }
        ::-webkit-scrollbar-track { background: rgba(235, 185, 94, 0.1); border-radius: 4px; }
        ::-webkit-scrollbar-thumb { background: #4B733D; border-radius: 4px; transition: all 0.3s ease; }
        ::-webkit-scrollbar-thumb:hover { background: #604E45; }
        * { scrollbar-width: thin; scrollbar-color: #4B733D rgba(235, 185, 94, 0.1); }
        .profile-card { backdrop-filter: blur(10px); background-color: rgba(255, 255, 255, 0.9); }
        .hover-scale { transition: transform 0.2s; }
        .hover-scale:hover { transform: scale(1.02); }
    </style>
</head>

<body class="bg-gradient-to-br from-[#F7E2B0] to-[#EBB95E] min-h-screen">
    <div class="container mx-auto px-4 py-8 md:py-16">
        <div class="max-w-5xl mx-auto">
            <!-- Profile Header -->
            <div class="bg-white/90 backdrop-blur-lg rounded-3xl p-8 shadow-2xl mb-12 hover-scale">
                <div class="flex flex-col md:flex-row items-center gap-10">
                    <!-- Profile Picture Section -->
                    <div class="relative group">
                        <div class="w-40 h-40 md:w-48 md:h-48 rounded-2xl overflow-hidden border-4 border-[#4B733D] shadow-2xl bg-[#F7E2B0] flex items-center justify-center transform transition-all duration-300 group-hover:rotate-2">
                            <img id="profileImage" src="/images/default_profile.png" alt="Profile Picture"
                                class="w-full h-full object-cover"
                                onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'"/>
                        </div>
                    </div>

                    <!-- Profile Info -->
                    <div class="text-center md:text-left flex-1">
                        <h1 class="text-4xl font-bold text-[#4B733D] mb-3">Your Profile</h1>
                        <p class="text-gray-600 text-lg mb-8">Manage your profile picture and account settings</p>
                        <form id="uploadForm" class="inline-block">
                            <label class="cursor-pointer bg-gradient-to-r from-[#4B733D] to-[#3a5a2d] text-white px-8 py-4 rounded-xl hover:shadow-2xl transition-all duration-300 inline-flex items-center gap-3 transform hover:-translate-y-1 active:translate-y-0">
                                <i class="fas fa-camera text-xl"></i>
                                <span class="font-semibold">Choose Profile Picture</span>
                                <input type="file" id="fileInput" accept="image/*" class="hidden" required />
                            </label>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <!-- Left Column -->
                <div class="space-y-10">
                    <!-- Profile Picture Upload Card -->
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-8 shadow-xl hover-scale">
                        <h2 class="text-2xl font-bold text-[#4B733D] mb-6 flex items-center gap-3">
                            <i class="fas fa-image text-2xl"></i>
                            Update Profile Picture
                        </h2>
                        <div class="space-y-6">
                            <div class="bg-[#F7E2B0]/50 backdrop-blur rounded-xl p-6">
                                <div class="flex items-start gap-4">
                                    <i class="fas fa-info-circle text-[#4B733D] text-xl mt-1"></i>
                                    <div>
                                        <p class="text-[#4B733D] text-base font-medium mb-3">Supported formats: JPG, PNG, GIF</p>
                                        <p class="text-[#4B733D] text-base font-medium">Maximum file size: 5MB</p>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" form="uploadForm"
                                class="w-full bg-gradient-to-r from-[#4B733D] to-[#3a5a2d] text-white py-4 rounded-xl font-bold text-lg hover:shadow-2xl transition-all duration-300 flex items-center justify-center gap-3 transform hover:-translate-y-1 active:translate-y-0">
                                <i class="fas fa-upload text-xl"></i>
                                Upload New Picture
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Right Column -->
                <div class="space-y-10">
                    <!-- Additional Profile Info Card -->
                    <div class="bg-white/90 backdrop-blur-lg rounded-2xl p-8 shadow-xl hover-scale">
                        <h2 class="text-2xl font-bold text-[#4B733D] mb-6 flex items-center gap-3">
                            <i class="fas fa-user text-2xl"></i>
                            Profile Guidelines
                        </h2>
                        <div class="space-y-4 text-gray-700">
                            <p class="flex items-center gap-3">
                                <i class="fas fa-check-circle text-[#4B733D]"></i>
                                Choose a clear, professional photo
                            </p>
                            <p class="flex items-center gap-3">
                                <i class="fas fa-check-circle text-[#4B733D]"></i>
                                Ensure good lighting and focus
                            </p>
                            <p class="flex items-center gap-3">
                                <i class="fas fa-check-circle text-[#4B733D]"></i>
                                Center your face in the frame
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/compressorjs/1.1.1/compressor.min.js"></script>
    <script>
        document.getElementById('uploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const file = document.getElementById('fileInput').files[0];
            if (!file) return alert("Please choose a file");

            new Compressor(file, {
                quality: 0.4,
                maxWidth: 400,
                maxHeight: 400,
                mimeType: 'image/jpeg',
                success(result) {
                    const reader = new FileReader();
                    reader.onloadend = async () => {
                        const base64Image = reader.result;

                        try {
                            const res = await fetch('/upload', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({ image: base64Image })
                            });

                            if (!res.ok) {
                                throw new Error(`HTTP error! status: ${res.status}`);
                            }

                            const data = await res.json();
                            if (data.success) {

                                document.getElementById('profileImage').src = base64Image;

                                const successMessage = document.createElement('div');
                                successMessage.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transform transition-all duration-500 translate-x-full';
                                successMessage.textContent = 'Profile picture updated successfully!';
                                document.body.appendChild(successMessage);

                                // Animate in
                                setTimeout(() => {
                                    successMessage.style.transform = 'translateX(0)';
                                }, 100);

                                // Remove after 3 seconds
                                setTimeout(() => {
                                    successMessage.style.transform = 'translateX(full)';
                                    setTimeout(() => successMessage.remove(), 500);
                                }, 3000);
                                if (data.success) {
                                    setTimeout(() => {
                                        window.location.href = '/login/farmer';
                                    }, 2000); 
                                }

                            }
                        } catch (err) {
                            console.error("Upload failed", err);
                            alert("Upload failed. Please try a smaller image or different format.");
                        }
                    };
                    reader.readAsDataURL(result);
                },
                error(err) {
                    console.error('Compression error:', err);
                    alert('Error processing image. Please try a different image.');
                }
            });
        });

        document.getElementById('fileInput').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                // Compress image for preview
                new Compressor(file, {
                    quality: 0.4,
                    maxWidth: 400,
                    maxHeight: 400,
                    mimeType: 'image/jpeg',
                    success(result) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            document.getElementById('profileImage').src = e.target.result;
                        }
                        reader.readAsDataURL(result);
                    },
                    error(err) {
                        console.error('Preview compression error:', err);
                        alert('Error processing image preview. Please try a different image.');
                    }
                });
            }
        });
    </script>
</body>
</html>