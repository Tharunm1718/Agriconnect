<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgriConnect Sign Up</title>
    <link rel="icon" type="image/png" href="/images/agriconnect_logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/signup.css">
    <link rel="stylesheet" href="/bookworker.css">
    <style>
        /* Custom Scrollbar Styles */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(235, 185, 94, 0.1);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: #4B733D;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #604E45;
        }

        /* For Firefox */
        * {
            scrollbar-width: thin;
            scrollbar-color: #4B733D rgba(235, 185, 94, 0.1);
        }
    </style>
</head>
<body>
    <div class="w-full min-h-screen flex">
        <div class="flex flex-col md:flex-row w-full">
            <!-- Left Section -->
            <div class="w-full md:w-1/2 bg-[#F7E2B0] p-6 md:p-10 flex flex-col items-center justify-center md:fixed h-[60vh] md:h-screen">
                <img src="/images/login3.png" alt="AgriConnect Visual" class="w-full h-auto max-h-[300px] md:max-h-[600px] object-contain" />
                <div class="mt-4 md:mt-8 flex space-x-4">
                    <button class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-[#4B733D]">
                        <i class="fab fa-facebook-f"></i>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-[#4B733D]">
                        <i class="fab fa-twitter"></i>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-[#4B733D]">
                        <i class="fab fa-linkedin-in"></i>
                    </button>
                </div>
            </div>
            
            <!-- Right Section -->
            <div class="w-full md:w-1/2 md:ml-[50%] p-12 bg-[#EBB95E]">
                <div class="flex justify-center mb-8">
                    <div class="w-40 h-40 flex items-center justify-center bg-transparent overflow-hidden mx-auto">
                        <img src="/images/agriconnect_logo.png" alt="AgriConnect Logo" class="w-36 h-36 object-contain mx-auto" onerror="this.onerror=null;this.src='/images/default_logo.png';">
                    </div>
                </div>
                
                <h1 class="text-3xl font-bold text-center text-gray-800 mb-2">Create Account</h1>
                <p class="text-center text-gray-600 mb-8">Join AgriConnect today</p>
                
                <!-- Role Selector -->
                <div class="role-selector flex justify-center mb-8">
                    <div class="flex space-x-4">
                        <div class="role active bg-[#4B733D] text-white px-6 py-3 rounded-lg flex items-center cursor-pointer">
                            <div class="icon w-6 h-6 bg-white rounded-full mr-2 flex items-center justify-center text-[#4B733D]">
                                <i class="fas fa-user-tie text-sm"></i>
                            </div>
                            <span>Farmer</span>
                        </div>
                        <div class="role inactive bg-gray-100 text-gray-700 px-6 py-3 rounded-lg flex items-center cursor-pointer">
                            <div class="icon dark w-6 h-6 bg-gray-300 rounded-full mr-2 flex items-center justify-center text-gray-600">
                                <i class="fas fa-hard-hat text-sm"></i>
                            </div>
                            <span>Worker</span>
                        </div>
                    </div>
                </div>
                
                <!-- Farmer Signup Form -->
                <form id="farmerForm" class="signup-form max-w-[700px] mx-auto" action="/Agriconnect/signup" method="POST">
                    <input type="hidden" name="role" value="farmer">
                    
                    <div class="form-group mb-4">
                        <label for="name" class="block text-white text-xl font-semibold mb-2">Full Name</label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                            placeholder="Enter your full name"
                            required
                        />
                    </div>

                    <div class="form-group mb-4">
                        <label for="phoneNumber" class="block text-white text-xl font-semibold mb-2">Phone Number</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <span class="text-[#4B733D] font-semibold">+91</span>
                            </div>
                            <input
                                type="text"
                                id="phone"
                                name="phoneNumber"
                                class="w-full pl-12 pr-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Enter your phone number"
                                pattern="[0-9]{10}"
                                title="Please enter a valid 10-digit phone number"
                                required
                                oninput="validatePhone(this)"
                            />
                            <div id="phoneError" class="hidden text-red-500 text-sm mt-1 absolute left-0">Phone number must be exactly 10 digits</div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="password" class="block text-white text-xl font-semibold mb-2">Password</label>
                        <div class="relative group">
                            <input
                                type="password"
                                id="password"
                                name="password"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Create a password"
                                required
                            />
                            <button 
                                type="button" 
                                class="absolute right-4 top-1/2 -translate-y-1/2 text-[#4B733D] hover:text-[#4B733D]/70 transition-colors duration-300" 
                                onclick="togglePassword('password')"
                            >
                                <i class="far fa-eye text-xl" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Location Fields -->
                    <div class="form-group mb-4">
                        <label class="block text-white text-xl font-semibold mb-2">Location</label>
                        <div class="grid grid-cols-2 gap-4">
                            <input
                                type="text"
                                name="village"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Village"
                                required
                            />
                            <input
                                type="text"
                                name="district"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="District"
                                required
                            />
                            <input
                                type="text"
                                name="state"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="State"
                                required
                            />
                            <input
                                type="text"
                                name="pincode"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Pincode"
                                required
                            />
                        </div>
                    </div>
                    
                    <button 
                        type="submit" 
                        class="sign-up-button w-full bg-[#4B733D] text-white py-4 rounded-xl font-semibold text-xl hover:bg-[#3a5a2d] active:scale-[0.98] transition-all duration-300 shadow-lg hover:shadow-xl mb-6"
                    >
                        Sign Up
                    </button>
                </form>

                <!-- Worker Signup Form -->
                <form id="workerForm" class="signup-form max-w-[700px] mx-auto hidden" action="/Agriconnect/signup/worker" method="POST">
                    <input type="hidden" name="role" value="worker">
                    
                    <div class="form-group mb-4">
                        <label for="workerName" class="block text-white text-xl font-semibold mb-2">Full Name</label>
                        <input
                            type="text"
                            id="workerName"
                            name="name"
                            class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                            placeholder="Enter your full name"
                            required
                        />
                    </div>

                    <div class="form-group mb-4">
                        <label for="workerPhone" class="block text-white text-xl font-semibold mb-2">Phone Number</label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <span class="text-[#4B733D] font-semibold">+91</span>
                            </div>
                            <input
                                type="text"
                                id="workerPhone"
                                name="phoneNumber"
                                class="w-full pl-12 pr-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Enter your phone number"
                                required
                            />
                        </div>
                    </div>
                    
                    <div class="form-group mb-4">
                        <label for="workerPassword" class="block text-white text-xl font-semibold mb-2">Password</label>
                        <div class="relative group">
                            <input
                                type="password"
                                id="workerPassword"
                                name="password"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Create a password"
                                required
                            />
                            <button 
                                type="button" 
                                class="absolute right-4 top-1/2 -translate-y-1/2 text-[#4B733D] hover:text-[#4B733D]/70 transition-colors duration-300" 
                                onclick="togglePassword('workerPassword')"
                            >
                                <i class="far fa-eye text-xl" id="workerToggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Location Fields -->
                    <div class="form-group mb-4">
                        <label class="block text-white text-xl font-semibold mb-2">Location</label>
                        <div class="grid grid-cols-2 gap-4">
                            <input
                                type="text"
                                name="village"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Village"
                                required
                            />
                            <input
                                type="text"
                                name="district"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="District"
                                required
                            />
                            <input
                                type="text"
                                name="state"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="State"
                                required
                            />
                            <input
                                type="text"
                                name="pincode"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Pincode"
                                required
                            />
                        </div>
                    </div>

                    <!-- Skills Field -->
                    <div class="form-group mb-4">
                        <label for="skills" class="block text-white text-xl font-semibold mb-2">Skills</label>
                        <div class="relative">
                            <input
                                type="text"
                                id="skills"
                                name="skills"
                                class="w-full px-4 py-3 bg-[#F7E2B0] rounded-xl border-2 border-transparent focus:border-[#4B733D] focus:ring-2 focus:ring-[#4B733D]/20 transition-all duration-300 text-lg font-medium placeholder-[#4B733D]/50"
                                placeholder="Enter your skills (comma separated)"
                                required
                            />
                            <p class="text-white text-sm mt-2">Example: Harvesting, Plowing, Irrigation</p>
                        </div>
                    </div>
                    
                    <button 
                        type="submit" 
                        class="sign-up-button w-full bg-[#4B733D] text-white py-4 rounded-xl font-semibold text-xl hover:bg-[#3a5a2d] active:scale-[0.98] transition-all duration-300 shadow-lg hover:shadow-xl mb-6"
                    >
                        Sign Up
                    </button>
                </form>
                
                <div class="text-center text-white text-lg">
                    Already have an account? 
                    <a href="/login/farmer" class="font-semibold hover:text-[#4B733D] transition-colors duration-300">
                        Sign in
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Toggle password visibility
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(inputId === 'password' ? 'toggleIcon' : 'workerToggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
        
        // Add animation to role selector
        document.addEventListener('DOMContentLoaded', function() {
            const roles = document.querySelectorAll('.role-selector .role');
            const farmerForm = document.getElementById('farmerForm');
            const workerForm = document.getElementById('workerForm');
            
            roles.forEach(role => {
                role.addEventListener('click', function() {
                    roles.forEach(r => {
                        r.classList.toggle('active');
                        r.classList.toggle('inactive');
                        r.classList.toggle('bg-[#4B733D]');
                        r.classList.toggle('bg-gray-100');
                        r.classList.toggle('text-white');
                        r.classList.toggle('text-gray-700');
                        
                        const icon = r.querySelector('.icon');
                        if (icon) {
                            icon.classList.toggle('bg-white');
                            icon.classList.toggle('bg-gray-300');
                            icon.classList.toggle('text-[#4B733D]');
                            icon.classList.toggle('text-gray-600');
                        }
                    });
                    
                    // Toggle forms
                    if (this.querySelector('span').textContent === 'Worker') {
                        farmerForm.classList.add('hidden');
                        workerForm.classList.remove('hidden');
                    } else {
                        farmerForm.classList.remove('hidden');
                        workerForm.classList.add('hidden');
                    }
                });
            });
        });

        function validatePhone(input) {
            const phoneError = document.getElementById('phoneError');
            const phoneNumber = input.value.replace(/\D/g, ''); // Remove non-digits
            
            if (phoneNumber.length !== 10) {
                phoneError.classList.remove('hidden');
                input.setCustomValidity('Phone number must be exactly 10 digits');
            } else {
                phoneError.classList.add('hidden');
                input.setCustomValidity('');
            }
        }
    </script>
</body>
</html> 