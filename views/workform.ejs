<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgriConnect Work Form</title>
    <link rel="icon" type="image/png" href="/images/agriconnect_logo.png">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/bookworker.css">
    <style>
        .form-container {
            background: linear-gradient(135deg, #DCA14D 0%, #EBB95E 63%, #E49C37 100%);
        }
        .form-input:focus {
            box-shadow: 0 0 0 3px rgba(220, 161, 77, 0.3);
        }
        .submit-btn:hover {
            transform: translateY(-2px);
        }
        /* Custom Scrollbar Styles */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(235, 185, 94, 0.1);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb {
            background: #4B733D;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #604E45;
        }

        /* For Firefox */
        * {
            scrollbar-width: thin;
            scrollbar-color: #4B733D rgba(235, 185, 94, 0.1);
        }
    </style>
</head>
<body class="min-h-screen" style="background-color: #F7E2B0;">
    <div class="container mx-auto px-4 py-8 max-w-3xl">
        <!-- Header Section -->
        <header class="text-center mb-10 relative">
            <div class="absolute right-0 top-0">
                <a href="/dashboard/farmer"
                    class="flex items-center px-4 py-2 rounded-lg bg-amber-100 text-amber-700 hover:bg-amber-200 transition-all duration-300 shadow-sm hover:shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i>
                    <span>Go Back</span>
                </a>
            </div>
            <div class="flex justify-center mb-4">
                <div class="bg-amber-100 p-4 rounded-full">
                    <i class="fas fa-tractor text-amber-600 text-4xl"></i>
                </div>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                <span class="text-amber-600">Book</span> a Farm Worker
            </h1>
            <p class="text-gray-600 max-w-md mx-auto">
                Find skilled workers for your agricultural needs. Fill out the form below to get started.
            </p>
        </header>

        <!-- Main Form Section -->
        <main>
            <form action="/book-worker-form" method="POST" class="form-container rounded-xl shadow-lg p-6 md:p-8">
                <!-- Work Type Selection -->
                <div class="mb-6">
                    <label for="workType" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-tools text-amber-700 mr-1"></i> Type of Work Needed
                    </label>
                    <div class="relative">
                        <select
                            id="workType"
                            name="workType"
                            required
                            class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                        >
                            <option value="" disabled selected>-- Select work type --</option>
                            <option value="Ploughing">Ploughing</option>
                            <option value="Harvesting">Harvesting</option>
                            <option value="Irrigation">Irrigation</option>
                            <option value="Planting">Planting</option>
                            <option value="Pruning">Pruning</option>
                            <option value="Fertilizing">Fertilizing</option>
                            <option value="Weeding">Weeding</option>
                            <option value="Other">Other Agricultural Work</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <!-- Date Selection -->
                <div class="mb-6">
                    <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-calendar-alt text-amber-700 mr-1"></i> When do you need the worker?
                    </label>
                    <div class="relative">
                        <input
                            type="date"
                            id="date"
                            name="date"
                            required
                            min="2023-01-01"
                            class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                        >
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                    </div>
                </div>

                <!-- Special Instructions -->
                <div class="mb-6">
                    <label for="instructions" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-clipboard-list text-amber-700 mr-1"></i> Special Instructions (Optional)
                    </label>
                    <textarea
                        id="instructions"
                        name="instructions"
                        rows="3"
                        placeholder="Any specific requirements or details about the job..."
                        class="form-input w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                    ></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button
                        type="submit"
                        class="submit-btn bg-amber-600 hover:bg-amber-700 text-white font-medium py-3 px-8 rounded-lg shadow-md transition duration-300 inline-flex items-center"
                    >
                        <i class="fas fa-search mr-2"></i> Find Available Workers
                    </button>
                </div>
            </form>
        </main>

        <!-- Footer Section -->
        <footer class="mt-12 text-center text-gray-500 text-sm">
            <p>Need help? Contact our support team at <a href="mailto:support@farmworkers.com" class="text-amber-600 hover:underline">support@farmworkers.com</a></p>
            <p class="mt-2">Â© 2023 FarmWorkers Connect. All rights reserved.</p>
        </footer>
    </div>

    <script>
        // Set minimum date to today
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').min = today;

            // Add animation to submit button on hover
            const submitBtn = document.querySelector('.submit-btn');
            submitBtn.addEventListener('mouseenter', function() {
                this.classList.add('hover:scale-105');
            });
            submitBtn.addEventListener('mouseleave', function() {
                this.classList.remove('hover:scale-105');
            });
        });
    </script>
</body>
</html>